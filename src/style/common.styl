* 
  margin: 0
  padding: 0

body
  font-family "Helvetica Neue", "Luxi Sans", "DejaVu Sans", Tahoma, "Hiragino Sans GB", "Microsoft Yahei", sans-serif

.sep20
  height 20px

.sep5
  height 5px

a
  &:link
  &:visited
  &:active
    color #778087
    text-decoration none
    word-break break-all
  &:hover
    color #4d5256
    text-decoration underline

  &.tab
    &:link
    &:visited
    &:active
      display inline-block
      font-size 14px
      line-height 14px
      padding 5px 8px 5px 8px
      margin-left 5px
      border-radius 3px
      color #555
    &:hover
      background-color #f5f5f5
      color #000
      text-decoration none

  &.tab_current
    &:link
    &:visited
    &:active
      display inline-block
      font-size 14px
      line-height 14px
      padding 5px 8px 5px 8px
      margin-left 5px
      border-radius 3px
      background-color #334
      color #fff
    &:hover
      background-color #445
      color #fff
      text-decoration none

img
  $.avatar
    -moz-border-radius 4px
    border-radius 4px

.cell
  padding 10px
  font-size 14px
  line-height 120%
  text-align left
  border-bottom 1px solid #e2e2e2

.box
  background-color #fff
  border-radius 3px
  box-shadow 0 2px 3px rgba(0, 0, 0, 0.1)

.item_title
  font-size: 16px;
  line-height: 130%;
  text-shadow: 0px 1px 0px #fff;
  word-wrap: break-word;
  hyphens: auto;

strong
  color #778087

.fade
  color #ccc

.chevron
  font-family "Lucide Grande"
  font-weight 500
    
h1
  font-size 24px
  font-weight 500
  line-height 150%
  margin 10px 0 10px 0
  padding 0

.gray
  color #999

.snow
  color #e2e2e2

.ago
  font-size 11px
  color #ccc
  margin-left 10px

p
  line-height 1.6

